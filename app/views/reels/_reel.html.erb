<%= content_tag_for(:li, reel) do %>
  <span class="handle">[drag]</span>
  <span class="title"><%= reel.name %></span>
  <span class="tools">
    <span class="edit_link" id=<%=reel.id%>><a>'Edit reel'</a></span>
    <span class="destroy_link"><%= link_to 'Delete reel', dvd_reel_path(parent, reel), :method => :delete %></span>
  </span>
  <%= content_tag_for(:div, reel, :class => 'edit_reel', :style => 'display: none;') do %>
    <%= render 'reels/form', :parent => parent, :resource => reel %>
  <% end %>
<% end %>
